# 使用官方Python运行时作为基础镜像
FROM python:3.9-alpine

# 设置工作目录
WORKDIR /app

# 设置环境变量
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# 安装系统依赖
RUN apk update && apk add --no-cache \
    build-base

# 复制requirements文件
COPY requirements.txt .

# 安装Python依赖 - simplified
RUN pip install --no-cache-dir --upgrade pip && pip install --no-cache-dir flask

# 复制项目文件到工作目录
COPY . .

# 创建上传目录
RUN mkdir -p uploads

# 暴露端口
EXPOSE 5000

# 创建数据库目录（如果使用SQLite）
RUN mkdir -p /app/db

# 启动应用
CMD ["gunicorn", "--bind", "0.0.0.0:5000", "--workers", "2", "--timeout", "120", "wsgi:wsgi_app"]